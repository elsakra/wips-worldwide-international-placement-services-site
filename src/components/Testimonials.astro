<section id="testimonials" class="py-20 md:py-28 lg:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 lg:mb-20">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight mb-6 animate-on-scroll">
        Success Stories
      </h2>
      <p class="text-xl text-wips-gray max-w-3xl mx-auto animate-on-scroll">
        Hear from professionals who've advanced their careers through WIPS
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      {testimonials.map((testimonial, index) => (
        <div 
          class="bg-wips-light rounded-3xl p-8 lg:p-10 animate-on-scroll"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="flex gap-1 mb-6">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          <p class="text-lg mb-8 leading-relaxed">"{testimonial.quote}"</p>
          <div>
            <div class="font-semibold">{testimonial.author}</div>
            <div class="text-sm text-wips-gray">{testimonial.role}</div>
            <div class="text-sm text-wips-gray">{testimonial.company}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>