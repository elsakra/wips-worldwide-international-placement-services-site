<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-b from-white to-wips-light">
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50/20 to-transparent"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32 text-center">
    <div class="space-y-8">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-semibold tracking-tight leading-tight animate-fade-up">
        Your Gateway to
        <span class="block gradient-text">Global Opportunities</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-wips-gray max-w-3xl mx-auto leading-relaxed animate-fade-up" style="animation-delay: 0.1s">
        WIPS connects talented professionals with prestigious international positions across industries and continents.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-up" style="animation-delay: 0.2s">
        <a href="#services" class="bg-wips-blue text-white px-8 py-4 rounded-full font-medium text-lg hover:bg-blue-700 transition-all duration-300 hover:scale-105">
          Explore Services
        </a>
        <a href="#contact" class="text-wips-blue font-medium text-lg hover:text-blue-700 transition-colors duration-300 flex items-center gap-2">
          Get Started
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <div class="pt-12 animate-fade-in" style="animation-delay: 0.4s">
        <p class="text-sm text-wips-gray mb-4">Trusted by professionals worldwide</p>
        <div class="flex justify-center items-center gap-8">
          <div class="text-center">
            <div class="text-3xl font-semibold">25+</div>
            <div class="text-sm text-wips-gray">Years Experience</div>
          </div>
          <div class="w-px h-12 bg-gray-300"></div>
          <div class="text-center">
            <div class="text-3xl font-semibold">5000+</div>
            <div class="text-sm text-wips-gray">Placements</div>
          </div>
          <div class="w-px h-12 bg-gray-300"></div>
          <div class="text-center">
            <div class="text-3xl font-semibold">50+</div>
            <div class="text-sm text-wips-gray">Countries</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-8 left-1/0 -translate-x-1/0 animate-bounce">
    <svg class="w-6 h-6 text-wips-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>