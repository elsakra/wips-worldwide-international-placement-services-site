<section id="contact" class="py-20 md:py-28 lg:py-32 bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight mb-8 animate-on-scroll">
        Ready to Go Global?
      </h2>
      <p class="text-xl md:text-2xl text-gray-300 mb-12 animate-on-scroll" style="animation-delay: 0.1s">
        Take the first step towards your international career success.
      </p>
      
      <div class="grid md:grid-cols-2 gap-8 mb-12 animate-on-scroll" style="animation-delay: 0.2s">
        <div class="bg-white/10 backdrop-blur rounded-3xl p-8">
          <h3 class="text-2xl font-semibold mb-4">For Professionals</h3>
          <p class="text-gray-300 mb-6">Discover exclusive international opportunities tailored to your expertise.</p>
          <a href="mailto:careers@wips.ch" class="inline-flex items-center gap-2 text-white bg-wips-blue px-6 py-3 rounded-full font-medium hover:bg-blue-600 transition-colors duration-300">
            Submit Your CV
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
        
        <div class="bg-white/10 backdrop-blur rounded-3xl p-8">
          <h3 class="text-2xl font-semibold mb-4">For Companies</h3>
          <p class="text-gray-300 mb-6">Find exceptional talent to drive your global business forward.</p>
          <a href="mailto:partners@wips.ch" class="inline-flex items-center gap-2 text-black bg-white px-6 py-3 rounded-full font-medium hover:bg-gray-100 transition-colors duration-300">
            Partner With Us
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-on-scroll" style="animation-delay: 0.3s">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <a href="tel:+41123456789" class="text-gray-300 hover:text-white transition-colors">+41 12 345 67 89</a>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <a href="mailto:info@wips.ch" class="text-gray-300 hover:text-white transition-colors">info@wips.ch</a>
        </div>
      </div>
    </div>
  </div>
</section>